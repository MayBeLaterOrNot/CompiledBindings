<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFTest"
        xmlns:m="http://compiledbindings.com/generators"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mx="http://compiledbindings.com/x"
        xmlns:viewModels="clr-namespace:WPFTest.ViewModels"
        mc:Ignorable="d m mx"
        x:Class="WPFTest.Views.MainWindow"
        mx:DataType="viewModels:MainViewModel"
        Width="800"
        Height="450"
        d:Title="WPFTest"
        Title="{x:Set local:Strings.Instance.Title}">

  <Window.Resources>
    <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />

    <BitmapImage x:Key="defaultImage" UriSource="/Images/download.png" />

    <DataTemplate x:Key="test1Template" DataType="viewModels:EntityViewModel">
      <Grid>
        <StackPanel>
          <TextBlock Text="{x:Bind Model.SByteProp}" Visibility="{x:Bind BooleanProp, Converter={StaticResource booleanToVisibilityConverter}}" />
          <TextBlock Text="{x:Bind BooleanProp}" />
        </StackPanel>
      </Grid>
    </DataTemplate>
  </Window.Resources>

  <StackPanel>
    <Image Width="200" Source="{x:Set _viewModel.LoadImageAsync()}" />
    <TextBox Text="{x:Bind OrderInput, Mode=TwoWay}" />
    <TextBlock Text="{x:Set local:Strings.Instance.Header1}" />
    <TextBlock Text="{x:Bind DecimalProp}" Visibility="{x:Bind BooleanProp, Converter={StaticResource booleanToVisibilityConverter}}" />
    <TextBlock Text="{x:Bind ModifyViewModel.Input1, FallbackValue='aaa'}" />
    <TextBlock Text="{x:Bind ModifyViewModel.Input2, FallbackValue='aaa'}" />
    <TextBlock Text="{x:Bind ModifyViewModel.Input1, TargetNullValue='ccc'}" />
    <TextBlock Text="{x:Bind TaskProp}" />
    <TextBlock mx:DataType="{x:Null}" m:Text="{x:Bind InstanceFunction(1, 2)}" />

    <Image Width="200" Source="{x:Bind LoadImageAsync(), FallbackValue={StaticResource defaultImage}}" />

    <ListView x:Name="listView"
              ItemTemplate="{StaticResource test1Template}"
              ItemsSource="{x:Bind ListProp}"
              m:SetVisible="{x:Bind ArrayProp.Length > 0}" />
    <Button IsEnabled="{x:Bind listView.SelectedItem ne null, DataType={x:Null}}" />
  </StackPanel>

</Window>
