<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="using:CompiledBindings.Markup"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mx="http://compiledbindings.com/x"
    xmlns:viewModels="using:WinUITest.ViewModels"
    mc:Ignorable="d mx"
    x:Class="WinUITest.Views.MainPage"
    mx:DataType="viewModels:MainViewModel"
    x:DefaultBindMode="OneWay"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate
            x:Key="testTemplate"
            x:DataType="viewModels:EntityViewModel">
            <Grid>
                <TextBlock Text="{b:Bind Path=IntProp}" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <StackPanel Margin="24">
            <TextBlock Text="{b:Bind Path=Prop1}" />
            <TextBlock Text="{b:Bind Path=Prop1}" />

            <TextBlock Text="{b:Bind Path=Class1.Prop2}" />
            <TextBlock Text="{b:Bind Path=Class1.Prop2}" />

            <TextBox Text="{b:Bind Path=StringInput, Mode=TwoWay}" />
            <TextBox Text="{b:Bind Path=InputProp1, Mode=TwoWay}" />

            <ListView
                x:Name="listView"
                ItemTemplate="{StaticResource testTemplate}"
                ItemsSource="{b:Bind Path=ListProp}" />

            <Button
                mx:DataType="{x:Null}"
                Content="Click"
                IsEnabled="{b:Bind Path=listView.SelectedItem ne null}" />
        </StackPanel>
    </Grid>
</Page>
